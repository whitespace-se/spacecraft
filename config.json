{
  "fractal": {
    "project": {
      "title": "Spacecraft"
    },
    "path": {
      "components": "views",
      "docs": "docs",
      "static": "build",
      "export": "export"
    }
  },

  "root": {
    "src": "./src",
    "dest": "./build"
  },

  "tasks": {
    "browserSync": {
      "server": {
        "baseDir": "build"
      }
    },

    "css": {
      "src": "scss",
      "dest": "css",
      "autoprefixer": {
        "browsers": ["last 3 versions"]
      },
      "sass": {
        "indentedSyntax": false,
        "outputStyle": "compressed"
      },
      "extensions": ["sass", "scss", "css"]
    },

    "production" : {
      "rev": true
    }
  }
}
