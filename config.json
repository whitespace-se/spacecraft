{
  "fractal": {
    "project": {
      "title": "Spacecraft"
    },
    "path": {
      "components": "views",
      "docs": "docs",
      "static": "build"
    }
  },

  "root": {
    "src": "./src",
    "dest": "./build"
  },

  "tasks": {
    "browserSync": {
      "server": {
        "baseDir": "build"
      }
    },

    "css": {
      "src": "scss",
      "dest": "css",
      "autoprefixer": {
        "browsers": ["last 3 versions"]
      },
      "sass": {
        "indentedSyntax": false,
        "outputStyle": "compressed"
      },
      "extensions": ["sass", "scss", "css"]
    },

    "icons": {
      "src": "icons",
      "dest": "./views/sprite",
      "config": {
        "mode": {
          "css": {
            "render": {
              "scss": true
            },
            "example": {
              "template": "gulpfile.js/templates/sprite.twig",
              "dest": "sprite.twig"
            }
          }
        }
      }
    },

    "production" : {
      "rev": true
    }
  }
}
