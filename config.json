{
  "root": {
    "path": "./",
    "src": "src",
    "dest": "build"
  },
  "production" : {
    "rev": true
  },
  "fractal": {
    "project": {
      "title": "Spacecraft"
    },
    "path": {
      "components": "views",
      "docs": "docs",
      "static": "build"
    },
    "syncOptions": {
     "open": true,
     "notify": true
    },
    "templateEngine": "twig",
    "templateExtension": ".twig",
    "themeSettings": {
      "skin": "black"
    }
  },
  "tasks": {
    "static": {
      "src": "static",
      "dest": "./"
    },

    "css": {
      "src": "scss",
      "dest": "css",
      "autoprefixer": {
        "browsers": ["last 3 versions"]
      },
      "sass": {
        "indentedSyntax": false,
        "outputStyle": "compressed"
      },
      "extensions": ["sass", "scss", "css"]
    },

    "images": {
      "src": "img",
      "dest": "img",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "js": {
      "src": "js",
      "dest": "js",
      "entries": {
        "app": ["./site.js"]
      },
      "extensions": ["js", "json"],
      "babel": {
        "presets": ["es2015", "stage-1"],
        "plugins": []
      },
      "extractSharedJs": false
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    },

    "icons": {
      "src": "icons",
      "dest": "icons",
      "config": {
        "mode": {
          "css": {
            "render": {
              "scss": true
            },
            "example": {
              "template": "gulpfile.js/templates/sprite.mustache",
              "dest": "../../../docs/sprite.twig"
            }
          }
        }
      }
    }
  }
}
